    "license": "MIT",
    "devDependencies": {
        "@biomejs/biome": "2.0.0-beta.5",
        "@types/node": "^22.15.19",
        "@types/react": "^19.1.4",
        "@types/react-dom": "^19.1.5",
        "esbuild-plugin-preserve-directives": "^0.0.11",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "tsc-watch": "^6.3.1",
        "tsup": "^8.5.0",
        "tsx": "^4.19.4",
        "turbo": "^2.5.3",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "next-intl": ">=4.1.0",
        "react": ">=18.0.0",
